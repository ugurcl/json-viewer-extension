{
  "manifest_version": 3,
  "name": "JSON Viewer",
  "version": "1.0.0",
  "description": "A Chrome extension that formats and highlights JSON responses with search, filter and tree view capabilities.",
  "permissions": ["activeTab", "clipboardWrite"],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "css": ["content/content.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
